generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model amenities {
  amenity_id Int    @id @unique(map: "amenity_id_UNIQUE") @default(autoincrement())
  name       String @unique(map: "name_UNIQUE") @db.VarChar(45)
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model amenitiescamper {
  camper_id  Int
  amenity_id Int

  @@ignore
}

model bookings {
  booking_id       Int      @id @unique(map: "booking_id_UNIQUE") @default(autoincrement())
  user_id          Int
  camper_id        Int
  start_date       DateTime @db.DateTime(0)
  end_date         DateTime @db.DateTime(0)
  status_id        Int
  created_at       DateTime @db.DateTime(0)
  number_of_guests Int
  cost             Decimal  @db.Decimal(10, 2)
}

model campers {
  camper_id       Int      @id @unique(map: "camper_id_UNIQUE") @default(autoincrement())
  owner_id        Int      @unique(map: "owner_id_UNIQUE")
  title           String   @db.VarChar(45)
  description     String   @db.VarChar(45)
  max_guests      Int
  price_per_night Decimal  @db.Decimal(10, 2)
  created_at      DateTime @db.DateTime(0)
}

model images {
  image_id   Int      @id @unique(map: "image_id_UNIQUE") @default(autoincrement())
  camper_id  Int
  image_url  String   @db.VarChar(255)
  created_at DateTime @db.DateTime(0)
}

model locations {
  location_id    Int     @id @unique(map: "location_id_UNIQUE") @default(autoincrement())
  camper_id      Int     @unique(map: "camper_id_UNIQUE")
  address_line1  String  @db.VarChar(45)
  adddress_line2 String  @db.VarChar(45)
  city           String  @db.VarChar(45)
  country        String  @db.VarChar(45)
  postal_code    String? @db.VarChar(45)
}

model reviews {
  review_id  Int      @id @unique(map: "review_id_UNIQUE") @default(autoincrement())
  booking_id Int      @unique(map: "booking_id_UNIQUE")
  user_id    Int
  rating     Int
  comment    String?  @db.VarChar(255)
  created_at DateTime @db.DateTime(0)
}

model transactions {
  id         Int     @id @unique(map: "id_UNIQUE") @default(autoincrement())
  amount     Decimal @db.Decimal(10, 2)
  status_id  Int
  booking_id String  @unique(map: "booking_id_UNIQUE") @db.VarChar(45)
}

model users {
  user_id       Int      @id @unique(map: "user_id_UNIQUE") @default(autoincrement())
  full_name     String   @db.VarChar(45)
  email         String   @unique(map: "email_UNIQUE") @db.VarChar(45)
  password_hash String   @db.VarChar(45)
  phone         String?  @unique(map: "phone_UNIQUE") @db.VarChar(45)
  date_of_birth String   @db.VarChar(45)
  country       String?  @db.VarChar(45)
  verified      String   @db.VarChar(45)
  created_at    DateTime @db.DateTime(0)
}
